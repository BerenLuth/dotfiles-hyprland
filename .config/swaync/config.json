{
	"$schema": "/etc/xdg/swaync/configSchema.json",
	"positionX": "right",
	"positionY": "top",
	"layer": "overlay",
	"control-center-margin-top": 24,
	"control-center-margin-bottom": 24,
	"control-center-margin-right": 24,
	"control-center-margin-left": 24,
	"notification-icon-size": 82,
	"notification-body-image-height": 100,
	"notification-body-image-width": 200,
	"timeout": 3,
	"timeout-low": 2,
	"timeout-critical": 0,
	"fit-to-screen": true,
	"control-center-width": 500,
	"control-center-height": 1025,
	"notification-window-width": 440,
	"keyboard-shortcuts": true,
	"image-visibility": "when-available",
	"transition-time": 200,
	"hide-on-clear": true,
	"hide-on-action": true,
	"script-fail-notify": true,
	"widgets": ["title", "notifications", "dnd", "mpris", "volume", "buttons-grid"],
	"widget-config": {
		"title": {
			"text": "Notification Center",
			"clear-all-button": true,
			"button-text": " Clear All"
		},
		"dnd": {
			"text": "Do Not Disturb"
		},
		"label": {
			"max-lines": 1,
			"text": "Notification Center"
		},
		"mpris": {
			"image-size": 96,
			"image-radius": 0
		},
		"volume": {
			"label": "󰕾",
			"show-per-app": true
		},
		"buttons-grid": {
			"actions": [
				{
					"label": "󰐥",
					"command": "systemctl poweroff"
				},
				{
					"label": "󰜉",
					"command": "systemctl reboot"
				},
				{
					"label": "󰌾",
					"command": "loginctl lock-session"
				},
				{
					"label": "󰍃",
					"command": "loginctl terminate-user $USER"
				},
				{
					"label": "󰤄",
					"command": "systemctl suspend"
				},
				{
					"label": "󰕾",
					"command": "wpctl set-mute @DEFAULT_SINK@ toggle"
				},
				{
					"label": "󰍬",
					"command": "wpctl set-mute @DEFAULT_SOURCE@ toggle"
				},
				{
					"label": "󰖩",
					"command": "swaync-client -cp && kitty --class=\"kitty-waybar-tool\" nmtui"
				},
				{
					"label": "󰂯",
					"command": "swaync-client -cp && kitty --class=\"kitty-waybar-tool\" bluetuith"
				},
				{
					"label": "",
					"command": "swaync-client -cp && kitty --class=\"kitty-waybar-tool\" /usr/local/bin/bootnext windows now"
				}
			]
		}
	}
}